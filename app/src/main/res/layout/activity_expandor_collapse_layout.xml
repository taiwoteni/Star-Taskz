<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExpandorCollapseLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="New Reminder"
            android:textSize="24dp"
            android:textStyle="bold"
            android:theme="@style/textMode" />

        <ImageView
            android:id="@+id/favouriteReminder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/star_icon"
            app:tint="@color/grey" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <EditText
                    android:id="@+id/reminderTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:maxLength="100"
                    android:background="@drawable/card_background"
                    android:theme="@style/editTextBackground"
                    android:gravity="top"
                    android:hint="Title..."
                    android:textColorHint="#99000000"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|italic"
                    android:inputType="text|textMultiLine"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/checkEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/check_icon"
                    app:tint="#99000000"
                    android:layout_gravity="bottom|end"/>

                <ImageView
                    android:id="@+id/cameraEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/camera_icon"
                    app:tint="#99000000"
                    android:layout_gravity="bottom|end"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/timeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/green3"
                    android:background="@drawable/green_card_background">

                    <ImageView
                        android:id="@+id/timeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/calender"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:theme="@style/tintMode2"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Time"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:theme="@style/textMode2"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/timeIcon"/>

                    <TextView
                        android:id="@+id/timeExit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="X"
                        android:textSize="18dp"
                        android:theme="@style/textMode2"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/timeContentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:background="@drawable/white_card_background"
                    style="@style/cardBackground"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/timeSelectionIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/time_icon"
                            android:theme="@style/tintMode"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/idAllDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/timeSelectionIcon"
                            android:layout_marginStart="20dp"
                            android:text="All Day"
                            android:textSize="18dp"
                            android:theme="@style/textMode"/>

                        <Switch
                            android:id="@+id/timeSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:theme="@style/nightModeSwitch"/>

                        <TextView
                            android:id="@+id/idToday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/idAllDay"
                            android:layout_alignStart="@id/idAllDay"
                            android:layout_marginTop="10dp"
                            android:text="Today"
                            android:textSize="18dp"
                            android:theme="@style/textMode"/>

                        <TextView
                            android:id="@+id/idDivide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textSize="18dp"
                            android:theme="@style/textMode"
                            android:layout_toEndOf="@id/idToday"
                            android:layout_below="@id/idAllDay"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/timePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:50"
                            android:textSize="18dp"
                            android:theme="@style/textMode"
                            android:layout_toEndOf="@id/idDivide"
                            android:layout_below="@id/idAllDay"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"/>

                        <CalendarView
                            android:id="@+id/calenderView"
                            android:layout_width="300dp"
                            android:layout_height="350dp"
                            android:layout_below="@id/idToday"
                            android:layout_alignStart="@id/timeSelectionIcon"
                            android:visibility="visible"
                            style="@style/calenderTextView" />

                        <TimePicker
                            android:id="@+id/timeView"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_below="@id/idToday"
                            android:layout_alignStart="@id/timeSelectionIcon"
                            android:theme="@style/calenderTextView"
                            android:visibility="visible"
                            android:numbersSelectorColor="@color/green3"
                            />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="30dp"
                        android:theme="@style/viewBackground"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/repeatIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/repeat_icon"
                            android:theme="@style/tintMode"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/idDontRepeat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/repeatIcon"
                            android:layout_marginStart="20dp"
                            android:text="Don't Repeat"
                            android:textSize="18dp"
                            android:theme="@style/textMode"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:id="@+id/mediumIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/sound_icon"
                            android:theme="@style/tintMode"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/idMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/mediumIcon"
                            android:layout_marginStart="20dp"
                            android:text="Medium"
                            android:textSize="18dp"
                            android:theme="@style/textMode"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/placeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/green3"
                    android:background="@drawable/green_card_background">

                    <ImageView
                        android:id="@+id/placeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/place_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:theme="@style/tintMode2"/>

                    <TextView
                        android:id="@+id/place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Place"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:theme="@style/textMode2"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/placeIcon"/>

                    <TextView
                        android:id="@+id/placeExit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="X"
                        android:textSize="18dp"
                        android:theme="@style/textMode2"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/placeContentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:background="@drawable/white_card_background"
                    android:theme="@style/cardBackground"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idPickAPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="60dp"
                        android:text="Pick a place"
                        android:textSize="18dp"
                        android:theme="@style/textMode"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey"/>

                    <TextView
                        android:id="@+id/idAddPresentPlaces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginBottom="30dp"
                        android:text="Add Present Places"
                        android:textSize="18dp"
                        android:theme="@style/textMode"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@color/grey"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/reminderLayout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/green3"
                android:background="@drawable/green_card_background">

                <ImageView
                    android:id="@+id/reminderIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/drawable_start_icon_for_reminders"
                    android:theme="@style/tintMode2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Reminder"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:theme="@style/textMode2"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/reminderIcon"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/cancelReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="Cancel"
            android:textSize="20dp"
            android:textStyle="bold"
            android:theme="@style/textMode"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/saveReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:text="Save"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>