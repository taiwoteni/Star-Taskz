<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bottom_drawer_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/bottom_drawer_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus Settings"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIMER OPTIONS"
                android:textSize="16dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Focus Duration"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/focus_duration_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10 minutes"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/goto_focus_duration"/>

                    <ImageView
                        android:id="@+id/goto_focus_duration"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/go_to_mini_arrow"
                        app:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Break Duration"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/break_duration_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10 minutes"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/goto_break_duration"/>

                    <ImageView
                        android:id="@+id/goto_break_duration"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/go_to_mini_arrow"
                        app:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Long Break Every"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/pomo_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1 Pomo"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/goto_long_break_every"/>

                    <ImageView
                        android:id="@+id/goto_long_break_every"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/go_to_mini_arrow"
                        app:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Postpone Reminder"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/postpone_reminder_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10 minutes"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/goto_postpone_reminder"/>

                    <ImageView
                        android:id="@+id/goto_postpone_reminder"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/go_to_mini_arrow"
                        app:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOCUS OPTIONS"
                android:textSize="16dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Screen On"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/screen_on_txt"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/screen_on_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:switchMinWidth="50dp"
                    android:theme="@style/nightModeSwitch"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOUND OPTIONS"
                android:textSize="16dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Focus-ending"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/focus_ending_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Ding"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/goto_focus_ending"/>

                    <ImageView
                        android:id="@+id/goto_focus_ending"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/go_to_mini_arrow"
                        app:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Break-ending"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/break_ending_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Ding"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/goto_break_ending"/>

                    <ImageView
                        android:id="@+id/goto_break_ending"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/go_to_mini_arrow"
                        app:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Sound Duration"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/sound_duration_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="15 seconds"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/goto_sound_duration"/>

                    <ImageView
                        android:id="@+id/goto_sound_duration"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/go_to_mini_arrow"
                        app:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Vibrate"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_alignParentStart="true"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/vibrate_on_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:switchMinWidth="50dp"
                        android:theme="@style/nightModeSwitch"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>