<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/green3"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/reminderColour"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toEndOf="@id/radioButton1"
            android:layout_centerVertical="true"
            android:src="@drawable/drawable_start_icon_for_reminders"/>

        <TextView
            android:id="@+id/reminderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/reminderColour"
            android:layout_centerVertical="true"
            android:text="My reminders"
            android:textSize="18dp"
            android:textStyle="bold"
            android:theme="@style/textMode"/>

        <TextView
            android:id="@+id/reminderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="2"
            android:textSize="16dp"
            android:theme="@style/textMode"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/reminderColour"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="50dp"
            android:theme="@style/viewBackground"/>
    </RelativeLayout>
</LinearLayout>