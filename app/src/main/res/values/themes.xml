<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskManagerFeatures" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TaskManagerFeatures" parent="Base.Theme.TaskManagerFeatures" />

    <!--Night Mode Theme-->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/transBlack</item>
        <item name="colorSwitchThumbNormal">@color/dark_grey</item>
        <item name="android:colorForeground">@color/transWhite</item>
    </style>

    <!--Text Light Mode-->
    <style name="textMode" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Text Light Mode 2-->
    <style name="textMode2" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--tint Light Mode-->
    <style name="tintMode" parent="Theme.AppCompat.Light">
        <item name="android:tint">@color/black</item>
    </style>

    <!--tint Light Mode 2-->
    <style name="tintMode2" parent="Theme.AppCompat.Light">
        <item name="android:tint">@color/white</item>
    </style>

    <!--tint Mode 3-->
    <style name="tintMode3" parent="Theme.AppCompat.Light">
        <item name="android:tint">@color/transBlack</item>
    </style>

    <!--tint Mode 4-->
    <style name="tintMode4" parent="Theme.AppCompat.Light">
        <item name="android:tint">#80000000</item>
    </style>

    <!--tint Mode 5-->
    <style name="tintMode5" parent="Theme.AppCompat.Light">
        <item name="android:backgroundTint">#10000000</item>
    </style>

    <!--Hint Text-->
    <style name="hintText" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">@color/transBlack</item>
        <item name="android:backgroundTint">@color/transBlack</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Calender Textview Light Mode-->
    <style name="calenderTextView" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Edittext Background-->
    <style name="editTextBackground" parent="Theme.AppCompat.Light">
        <item name="android:backgroundTint">@color/green4</item>
    </style>

    <!--View Background-->
    <style name="viewBackground" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/grey</item>
    </style>

    <!--Radio Button Colour-->
    <style name="checkedRadioButton" parent="Theme.AppCompat">
        <item name="android:colorActivatedHighlight">@color/green3</item>
    </style>

    <!--Card Background Colour-->
    <style name="cardBackground" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:tint">@color/black</item>
    </style>

<!--    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
