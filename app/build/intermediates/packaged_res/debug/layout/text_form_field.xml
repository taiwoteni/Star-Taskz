<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/medium_value_size"
    android:gravity="center"
    android:paddingVertical="@dimen/regular_font_size"
    android:background="@drawable/text_form_background">
    <ImageView
        android:id="@+id/prefix_icon"
        android:layout_width="@dimen/medium_icon_size"
        android:layout_height="@dimen/medium_icon_size"
        android:scaleType="centerCrop"
        android:src="@drawable/email"
        app:tint="@color/themeColor" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="email"
            android:lines="1"
            android:textColorHighlight="@color/highlightColor"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="@dimen/medium_value_size"
            android:textColorHint="@color/secondary"
            android:textColor="@color/primary"
            android:textSize="@dimen/regular_font_size"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/suffix_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/eyes_opened"
        app:tint="@color/themeColor" />


</LinearLayout>